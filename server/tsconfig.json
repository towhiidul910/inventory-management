{
    "compilerOptions": {
      "target": "ESNext",                  // JavaScript target
      "module": "nodenext",               // Module resolution for Node.js (ESM & CommonJS)
      "rootDir": "src",                   // Where your TypeScript files are located
      "outDir": "dist",                   // Compiled JavaScript output
      "strict": true,                     // Enable strict type-checking
      "esModuleInterop": true,            // Compatibility with CommonJS
      "skipLibCheck": true,               // Skip type checking for library files
      "resolveJsonModule": true           // Allow importing JSON files
    },
    "include": ["src"],                   // Include the source folder
    "exclude": ["node_modules"]           // Exclude dependencies
  }
  